{
	"name": "sistemas-pedidos-comprovantes",
	"version": "0.0.1",
	"description": "Uma API em Node usando typescript.",
	"main": "index.js",
	"scripts": {
		"start": "tsx server.ts",
		"start:dev": "tsx watch server.ts",
		"db:dev": "prisma migrate dev",
		"build": "tsup src",
		"test": "vitest run --dir src/services/tests",
		"test:watch": "vitest --dir src/services/tests",
		"db:test:up": "docker compose -f docker-compose.test.yml up -d",
		"db:test:down": "docker compose -f docker-compose.test.yml down -v",
		"test:e2e:all": "npm run db:test:up && npm run db:dev && npm run test:e2e && npm run db:test:down",
		"test:e2e": "vitest --dir src/controllers --ui --watch",
		"test:e2e:users": "vitest --dir src/controllers/users/tests --ui --watch",
		"test:e2e:orders": "vitest --dir src/controllers/orders/tests --ui --watch"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.19",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/multer": "^2.0.0",
		"@types/node": "^22.5.5",
		"@types/supertest": "^6.0.3",
		"@types/swagger-ui-express": "^4.1.8",
		"@vitest/ui": "^3.1.2",
		"globals": "^15.9.0",
		"prisma": "^6.7.0",
		"supertest": "^7.1.1",
		"swagger-ui-express": "^5.0.1",
		"tsup": "^8.3.0",
		"tsx": "^4.19.1",
		"typescript": "^5.6.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.2"
	},
	"dependencies": {
		"@prisma/client": "^6.7.0",
		"bcryptjs": "^3.0.2",
		"cloudinary": "^2.7.0",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"express": "^4.21.0",
		"jsonwebtoken": "^9.0.2",
		"multer": "^2.0.1",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"zod": "^3.24.3"
	}
}
